.ka-layoutContent-main {
    border: 1px solid silver;
    -moz-border-radius-topleft: 5px;
    -moz-border-radius-topright: 5px;
    margin-bottom: 7px;
    margin-top: 3px;
    background-color: white;
    color: #222;
    text-align: left;
    position: relative;
}

.ka-layoutContent-main:hover {
    border: 1px dashed silver;
}

.ka-layoutContent-main-selected,
.ka-layoutContent-main-selected:hover {
    border: 2px dashed #2697bc;
    background-color: #fffacc;
}


.ka-layoutContent-main input, 
.ka-layoutContent-main select {
    border: 1px solid silver;
    padding: 1px;
    font-size: 11px;
}

.ka-layoutContent-title {
    -moz-border-radius-topleft: 5px;
    -moz-border-radius-topright: 5px;
    position: relative;
    margin-bottom: 2px;
    padding-left: 3px;
    line-height: 17px;
    height: 17px;
    font-size: 10px;
    color: #555;
    border-bottom: 1px solid #eee;
    background-color: #eee;
}

.ka-layoutContent-options {
    padding-left: 5px;
    font-size: 10px;
    position: absolute;
    right: 3px;
    top: 1px;
}

.ka-layoutContent-options img {
    float: right;
    margin-right: 2px;
    cursor: pointer;
}

.ka-layoutContent-div {
    font-size: 10px;
    position: relative;
    cursor: pointer;
    background-repeat: no-repeat;
    min-height: 32px;
}

.ka-layoutContent-bubbleBox {
    border: 1px solid silver;
    padding: 5px;
    background-color: #eee;
    position: absolute;
    width: 200px;
    height: 35px;
    z-index: 93000000;
}


.ka-contentBox-main {
    -moz-border-radius: 4px;
    border: 1px solid silver;
    background-color: #f2f2f2;
    padding: 2px;
    text-align: center;
}
