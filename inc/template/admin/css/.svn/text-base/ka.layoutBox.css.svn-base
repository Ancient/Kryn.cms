.ka-layoutBox-main {
    padding: 0px;
}

.ka-layoutBox-container {
    min-height: 30px;
}

.ka-layoutBox-title {
    position: relative;
    padding: 2px;
    color: #888;
    font-size: 11px;
    line-height: 15px;
    border: 1px solid #bbb;
    border-top: 0px;
    margin-bottom: 3px;
    background-color: #ddd;
    padding-left: 25px;
    -moz-border-radius-bottomleft: 4px;
    -moz-border-radius-bottomright: 4px;
}

body .ka-layoutBox-main img.ka-layoutBox-add {
    position: absolute;
    left: 2px;
    top: 2px;
    cursor: pointer;
    border: 0px;
    margin: 0px;
    padding: 0px;
}

body .ka-layoutBox-main .ka-layoutBox-iconBar-icon {
    position: relative;
    border: 0px;
    margin: 0px;
    margin-left: 1px;
    margin-right: 1px;
    padding: 0px;
    float: right;
    left: -17px;
    top: 0px;
    cursor: pointer;
}
