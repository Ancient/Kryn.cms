  "plugins": {
    "pluginEmailLogin": [
      "Login [via email]",
      {
        "template": {
          "label": "Template",
          "type": "files",
          "withoutExtension": true,
          "directory": "inc\/template\/users\/login\/"
        },
        "templateLoggedIn": {
          "label": "Template logged in",
          "type": "files",
          "withoutExtension": true,
          "directory": "inc\/template\/users\/loggedIn\/"
        },
        "target": {
