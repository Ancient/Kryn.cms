          "label": "Category",
          "desc": "Which categories can login ?",
          "type": "select",
          "multi": true,
          "sql": "SELECT * FROM %pfx%system_groups",
          "table_label": "name",
          "table_id": "rsn"
        }
      }
    ],
    "pluginRegistration": [
      "Registration (In Development)",
      {
        "template": {
          "label": "Template",
          "type": "files",
          "withoutExtension": true,
          "directory": "inc\/template\/users\/registration\/"
        },
        "category_rsn": {
          "label": "Group",
          "desc": "Which group should the new users be added to?",
          "type": "select",
          "sql": "SELECT * FROM %pfx%system_groups",
          "table_label": "name",
          "table_id": "rsn"
        },
        "targetpage": {
          "label": "Thanks page",
          "type": "page"
        },
        "activation": {
          "label": "Activation",
          "desc": "How should the account be activated?",
          "type": "select",
          "tableItems": [
            {
              "name": "Immediately",
              "key": "now"
            },
            {
              "name": "By administrator",
              "key": "admin"
            },
            {
              "name": "Activation email",
              "key": "email"
            },
            {
              "name": "Activation email and administrator",
              "key": "emailadmin"
            }
          ],
          "table_label": "name",
          "table_id": "key",
          "depends": {
            "email_actpage": {
              "needValue": "email",
              "label": "Activation page",
              "type": "page"
            },
            "email_subject": {
              "needValue": "email",
              "label": "Email subject"
            },
            "email_from": {
              "needValue": "email",
              "label": "Email from"
            },
            "email_template": {
              "needValue": "email",
              "label": "Email template",
              "type": "files",
              "withoutExtension": true,
              "directory": "inc\/template\/users\/activateemail\/"
            },
            
            "emailadmin_actpage": {
              "needValue": "emailadmin",
              "label": "Activation page",
              "type": "page" 
            },
            "emailadmin_subject": {
              "needValue": "emailadmin",
              "label": "Email subject"
            },
            "emailadmin_from": {
              "needValue": "emailadmin",
              "label": "Email from"
            },
            "emailadmin_template": {
              "needValue": "emailadmin",
              "label": "Email template",
              "type": "files",
              "withoutExtension": true,
              "directory": "inc\/template\/users\/activateemail\/"
            }
          }
        },
        "required": {
          "label": "Required fields",
          "desc": "Select the fields you want to set as required for registration. Email address and password are required by default.",
          "type": "select",
          "tableItems": [
            { "name": "Username",   "key": "username" },
            { "name": "First name", "key": "firstname" },
            { "name": "Last name",  "key": "lastname" },
            { "name": "Street",     "key": "street" },
            { "name": "City",       "key": "city" },
            { "name": "Zipcode",    "key": "zipcode" },
            { "name": "Country",    "key": "country" },
            { "name": "Phone",      "key": "phone" },
            { "name": "Fax",        "key": "fax" },
            { "name": "Company",    "key": "company" }
          ],
          "table_label": "name",
          "table_id": "key",
          "multiple": true
        },
        "hidden": {
          "label": "Hidden fields",
          "desc": "Select the fields you want to hide from registration. Email address and password can not be hidden.",
          "type": "select",
          "tableItems": [
            { "name": "Username",   "key": "username" },
            { "name": "First name", "key": "firstname" },
            { "name": "Last name",  "key": "lastname" },
            { "name": "Street",     "key": "street" },
            { "name": "City",       "key": "city" },
            { "name": "Zipcode",    "key": "zipcode" },
            { "name": "Country",    "key": "country" },
            { "name": "Phone",      "key": "phone" },
            { "name": "Fax",        "key": "fax" },
            { "name": "Company",    "key": "company" }
          ],
          "table_label": "name",
          "table_id": "key",
          "multiple": true
        },
        "notificationemail": {
          "label": "Email notification",
          "desc": "Send an email to target address if an account was created",
          "type": "checkbox",
          "depends": {
            "notifyemail_target": {
              "needValue": "1",
              "label": "Notify email target address"
            },
            "notifyemail_subject": {
              "needValue": "1",
              "label": "Notify email subject"
            },
            "notifyemail_from": {
              "needValue": "1",
              "label": "Notify email from address"
