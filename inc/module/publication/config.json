{
  "owner": "1",
  "version": "0.6.0",
  "desc": {
    "en": "Publication is a small news\/blog system, where you can manage and display news.",
    "de": "Ein Blog und News-System mit Kommentarfunktion und dem Grundsatz an Backendfunktionalitaet"
  },
  "title": {
    "en": "News and Blogs",
    "de": "News und Blogs"
  },
  "category": "1",
  "community": "1",
  "writableFiles": "inc\/template\/publication\/*",
  "domainProperties": {
    "cache": {
      "label": "[[Cache html]]",
      "desc": "[[Some templates does not support this. If you have troubles, just deactivate this.]]",
      "type": "checkbox",
      "default": "0"
    }
  },
  "admin": {
    "news": {
      "title": "[[News]]",
      "type": "combine",
      "class": "publicationNewsList",
      "minWidth": 800,
      "minHeight": 400,
      "childs": {
        "add": {
          "title": "[[Add]]",
          "type": "add",
          "class": "publicationNewsAdd",
          "isLink": false,
          "multi": true,
          "childs": [
            
          ]
        },
        "edit": {
          "title": "[[Edit]]",
          "type": "edit",
          "class": "publicationNewsEdit",
          "isLink": false,
          "multi": true,
          "childs": [
            
          ]
        },
        "category": {
          "title": "[[Category]]",
          "type": "list",
          "class": "publicationNewsCatsList",
          "isLink": true,
          "multi": true,
          "childs": {
            "add": {
              "title": "[[Add]]",
              "type": "add",
              "class": "publicationNewsCatsAdd",
              "isLink": true,
              "multi": true,
              "childs": [
                
              ]
            },
            "edit": {
              "title": "[[Edit]]",
              "type": "edit",
              "class": "publicationNewsCatsEdit",
              "isLink": true,
              "multi": true,
              "childs": [
                
              ]
            }
          }
        },
        "comments": {
          "title": "[[Comments]]",
          "type": "list",
          "class": "publicationNewsComments",
          "isLink": true,
          "multi": true,
          "childs": {
            "edit": {
              "title": "[[Edit]]",
              "type": "edit",
              "class": "publicationNewsCommentsEdit",
              "multi": true
            },
            "add": {
              "title": "[[Add]]",
              "type": "add",
              "class": "publicationNewsCommentsAdd",
              "multi": true
            }
          }
        }
      }
    }
  },
  "plugins": {
    "newsDetail": [
      "[[Article detail]]",
      {
        "template": {
          "label": "[[Template]]",
          "withoutExtension": 1,
          "directory": "inc\/template\/publication\/news\/detail\/",
          "type": "files"
        },
        "replaceTitle": {
          "label": "[[Replace page title]]",
          "desc": "Replace the title of the item with the page title",
          "type": "checkbox",
          "default": "1"
        },
        "allowComments": {
          "label": "[[Allow comments]]",
          "type": "checkbox",
          "depends": {
            "itemsPerPage": {
              "needValue": 1,
              "label": "Count per page",
              "type": "integer",
              "length": "6",
              "default": "10"
            },
            "maxPages": {
              "needValue": 1,
              "label": "[[Max pages]]",
              "type": "integer",
              "length": "6",
              "default": "10"
            }
          }
        },
        "category_rsn": {
          "label": "[[Limit categories]]",
          "table": "publication_news_category",
          "table_key": "rsn",
          "table_label": "title",
          "multi": 1,
          "type": "select"
        }
      }
    ],
    "newsDetailFixed": [
      "[[News detail fixed]]",
      {
        "template": {
          "label": "[[Template]]",
          "withoutExtension": 1,
          "directory": "inc\/template\/publication\/news\/detail\/",
          "type": "files"
        },
        "news_rsn": {
          "label": "[[Article]]",
          "table": "publication_news",
          "table_key": "rsn",
          "table_label": "title",
          "type": "select"
        },
        "replaceTitle": {
          "label": "[[Replace page title]]",
          "desc": "Replace the title of the item with the page title",
          "type": "checkbox",
          "default": "1"
        },
        "allowComments": {
          "label": "[[Allow comments]]",
          "type": "checkbox",
          "depends": {
            "itemsPerPage": {
              "needValue": 1,
              "label": "[[Count per page]]",
              "type": "integer",
              "length": "6",
              "default": "10"
            },
            "maxPages": {
              "needValue": 1,
              "label": "[[Max pages]]",
              "type": "integer",
              "length": "6",
              "default": "10"
            }
          }
        }
      }
    ],
    "newsList": [
      "[[News list]]",
      {
        "itemsPerPage": {
          "label": "[[Count per page]]",
          "type": "number",
          "length": "6",
          "default": "10"
        },
        "maxPages": {
          "label": "[[Max pages]]",
          "type": "number",
          "length": "6",
          "default": "10"
        },
        "detailPage": {
          "label": "[[Detailpage]]",
          "type": "page"
        },
        "template": {
          "label": "[[Template]]",
          "withoutExtension": 1,
          "directory": "inc\/template\/publication\/news\/list\/",
          "type": "files"
        },
        "category_rsn": {
          "label": "[[Limit categories]]",
          "table": "publication_news_category",
          "table_key": "rsn",
          "table_label": "title",
          "multi": 1,
          "type": "select"
        },
        "order": {
          "label": "[[Sort by]]",
          "items": {
            "title": "[[Title]]",
            "releaseat": "[[Release date]]",
            "releasedate": "[[News date]]",
            "category_rsn": "[[Category]]"
          },
          "type": "select",
          "default": "2"
        },
        "orderDirection": {
          "label": "Sort direction",
          "items": {
            "desc": "[[Descending]]",
            "asc": "[[Ascending]]"
          },
          "type": "select"
        },
        "enableRss": {
          "label": "[[Enables Rss view on this page]]",
          "type": "checkbox",
          "depends": {
            "rssTemplate": {
              "needValue": 1,
              "label": "[[Rss feed template]]",
              "type": "files",
              "withoutExtension": true,
              "directory": "inc\/template\/publication\/news\/rss\/"
            }
          }
        }
      }
    ],
    "rssList": [
      "[[News RSS Feed]]",
      {
        "itemsPerPage": {
          "label": "[[Maximum Items for rss feed]]",
          "type": "number",
          "length": "6",
          "default": "10"
        },
        "detailPage": {
          "label": "[[Detailpage]]",
          "type": "page"
        },
        "rssTemplate": {
          "label": "[[Template]]",
          "withoutExtension": 1,
          "directory": "inc\/template\/publication\/news\/rss\/",
          "type": "files"
        },
        "category_rsn": {
          "label": "[[Category\/s]]",
          "table": "publication_news_category",
          "table_key": "rsn",
          "table_label": "title",
          "multi": 1,
          "type": "select"
        }
      }
    ],
    "categoryList": [
      "[[Category list (with Counts)]]",
      {
        "listPage": {
          "label": "[[Page with list plugin]]",
          "type": "page"
        },
        "template": {
          "label": "[[Template]]",
          "withoutExtension": 1,
          "directory": "inc\/template\/publication\/categoryList\/",
          "type": "files"
        },
        "category_rsn": {
          "label": "[[Limit categories]]",
          "table": "publication_news_category",
          "table_key": "rsn",
          "table_label": "title",
          "multi": 1,
          "type": "select"
        }
      }
    ]
  },
  "db_relations": {
    "publication_news": {
      "table": "publication_comments",
      "relation": "1-n",
      "fields": {
        "rsn": "parent_rsn"
      }
    }
  },
  "objects": {
    "news": {
      "title": "[[Article]]",
      "desc": "[[Articles]]",
      "table": "publication_news",
      "table_primary": "rsn",
      "plugins": [
        "newsDetail"
      ],
      "table_field_sync": true,
      "fields": {
        "rsn": {
          "type": "number",
          "label": "[[Id]]"
        },
        "title": {
          "type": "text",
          "length": 255,
          "label": "[[Title]]"
        },
        "category_rsn": {
          "type": "object",
          "label": "[[Category]]",
          "object": "news_category",
          "object_label": "title",
          "object_label_map": "category_title"
        }
      }
    },
    "news_comment": {
      "title": "[[Comments]]",
      "table": "publication_comments"
    },
    "news_category": {
      "title": "[[Article categories]]",
      "table": "publication_news_category",
      "table_primary": "rsn",
      "object_label": "title"
    }
  },
